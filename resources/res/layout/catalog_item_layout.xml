<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/bg_catalog_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginEnd="20dp">
    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="start" android:id="@+id/catalog_name_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="item name" android:fontFamily="@font/gotham" android:layout_marginHorizontal="20dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="100dp">
        <ProgressBar android:id="@+id/catalog_progress_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:indeterminateTint="@color/white"/>
        <ImageView android:id="@+id/catalog_image" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/audi_img"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="start" android:id="@+id/catalog_item_price_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="item price" android:layout_alignParentBottom="true" android:fontFamily="@font/gothampro_bold" android:layout_marginHorizontal="20dp"/>
    </RelativeLayout>
</LinearLayout>
